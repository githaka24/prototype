{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@layout": ["./src/exports/components/layout"],
            "@shared": ["./src/exports/components/shared"],
            "@views": ["./src/exports/components/views"],
            "@layoutStyles": ["./src/exports/styles/layout"],
            "@sharedStyles": ["./src/exports/styles/shared"],
            "@viewsStyles": ["./src/exports/styles/views"],
            "@fontsHosted": ["./src/exports/fonts/hosted"],
            "@fontsStatic": ["./src/exports/fonts/static"],
            "@fontsVariable": ["./src/exports/fonts/variable"],
            "@/*": ["./src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
